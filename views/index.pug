extends layout

block content
  link(rel="stylesheet" href="./build/css/app.css")
  div(class="container text-center")
    div(class="display-4") Covid and Politics
  div(class="container text-center")
    div(class="row")
      div(class="col border" id="expressionSpace")
        button(class="btn btn-primary btn-outline-dark m-2 font-weight-bold" type="click" id="numDenom") Make an Expression
    div(class="row")
      div(class="col border")
        div(id="map" class="m-auto")
    div(class="row")
      div(class="col")
        button(class="btn btn-primary btn-outline-dark m-2 font-weight-bold" type="button" id="colorPolitics") Political Colors
        button(class="btn btn-primary btn-outline-dark m-2 font-weight-bold" type="button" id="colorDeathPop") Death/Population
        button(class="btn btn-primary btn-outline-dark m-2 font-weight-bold" type="button" id="colorDeathPopNormalized") Death/Population (Normalized)
    div(class="row")
      div(class="col")
        div(id='selectedStates1')
      div(class="col")
        div(id='selectedStates2')
  
  script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
  script(src="./build/js/app.js")
  script(src="./js/mapdata.js")
  script(src="./js/usmap.js")

  script(src="./js/loadstates.js")
  //- script(src="./js/redblue.js")
  script(src="./js/addStates.js")
  script(src="./js/colorStates.js")
  script(src="./js/select.js")
  script(src="./js/makeExpression.js")
